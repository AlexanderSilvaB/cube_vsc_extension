{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "cube",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
				"name": "keyword.control.cube",
				"match": "\\b(if|else|do|for|while|return|as|and|break|continue|import|require|or|is|in|not|switch|case|default|async|await|abort|try|catch|throw)\\b"
				},
				{
				"name": "keyword.other.cube",
				"match": "\\b(with|super|this|args)\\b"
				}
			]
			},
		"comments": {
			"patterns": [
				{
				"name": "comment.line.double-dash.cube",
				"begin": "//",
				"end": "\n"
				},
				{
				"name": "comment.line.shabang.cube",
				"begin": "#!",
				"end": "\n"
				},
				{
				"name":"comment.block.cube",
				"begin": "\/[*]",
				"end": "[*](\/)"
				}
			]
		},
		"strings":{
			"patterns": [
				{
				"name":"string.quoted.single.cube",
				"begin": "'",
				"end": "'"
				},
				{
				"name":"string.quoted.double.cube",
				"begin": "\"",
				"end": "\""
				}
			]
		},
		"variables":{
			"patterns": [
				{
				"name": "variable.language.cube"	,
				"match": "\\b(global|var|void|bool|num|int|str|bytes|list|dict)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
				"name": "constant.character",
				"match": "(@)"
				},
				{
				"name": "constant.language",
				"match": "\\b(none|inf|nan|true|false|class|func|native|static|enum)\\b"
				},
				{
				"name": "constant.numeric",
				"match": "[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?"
				}
			]
		}

	},
	"scopeName": "source.cube"
}
